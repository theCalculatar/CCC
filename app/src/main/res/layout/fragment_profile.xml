<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="contentDescription"
    tools:context=".ui.profile.ProfileFragment">
    <RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/header"
            android:src="@drawable/ul"
            android:scaleType="centerCrop"
            />
    
    
    
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pic_lay"
            android:layout_marginTop="14dp"
            android:layout_alignBottom="@id/header"
            android:layout_marginBottom="-50dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="50dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/profile_pic"
                android:src="@drawable/ic_baseline_person_24"
                android:scaleType="centerCrop"/>
    
        </androidx.cardview.widget.CardView>
    
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_user"
            android:textColor="#C9000000"
            android:layout_marginTop="70dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_below="@id/pic_lay"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_below="@id/name_user"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Account"
            android:id="@+id/you_acc"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_below="@id/email"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/you_acc"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:cardElevation="2dp"
            android:id="@+id/edit_profile">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user_alt"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/pic.."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:drawablePadding="7dp"
                    android:textColor="#C9000000"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_toEndOf="@id/pic.."
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="@string/edit"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/edit_profile"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:cardElevation="2dp"
            android:id="@+id/notifications">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_bell"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/pic.1."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:drawablePadding="7dp"
                    android:textColor="#C9000000"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_toEndOf="@id/pic.1."
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="Notifications settings"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@id/notifications"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:id="@+id/date_of_birth"
            android:text="App settings" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/date_of_birth"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:cardElevation="2dp"
            android:id="@+id/support">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_question"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/pic.7."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:drawablePadding="7dp"
                    android:textColor="#C9000000"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_toEndOf="@id/pic.7."
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="Support"/>
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/support"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:cardCornerRadius="5dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            app:cardElevation="2dp"
            android:id="@+id/terms">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/pic.3."
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:drawablePadding="7dp"
                    android:textColor="#C9000000"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_toEndOf="@id/pic.3."
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:text="Terms of Service"/>
                <ImageView
                    android:layout_height="20dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/sign_out"
            android:textAlignment="gravity"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/login_stroke_18_dp"
            android:text="@string/sign_out"
            android:textColor="#C9000000"
            android:layout_below="@id/terms"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            />
    
    
    </RelativeLayout>
    <ScrollLayout>
